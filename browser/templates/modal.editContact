<ion-modal-view>
  <ion-header-bar class="bar-OG">
  <button class="button button-clear" ng-click="closeProfileContact()">Close</button>
    <h1 class="title">Contact Profile</h1>
  
      
      <button class="button button-clear" ng-click="closeProfileContact('Save')">Save</button>
  </ion-header-bar>
  <ion-content>
    
    <div class="list">

    <div ng-repeat="wizard in data.wizards">
      <div class="item item-divider" >
       {{wizard.Name}}
      </div>

      <label class="item item-radio" ng-repeat="item in wizard.pickListValues | orderBy:'number'" for="{{item}}">
        <input type="radio" name="{{wizard.Name}}" ng-model="wizard.currentValue" ng-value="item.text">
        <div class="item-content">
          {{item.text}}
        </div>
        <i class="radio-icon ion-checkmark"></i>
      </label>
    </div>

  </div>

  </ion-content>
</ion-modal-view>